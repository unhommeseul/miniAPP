.cover{
    background-color: aliceblue;
    text-align: center;
    padding: 80rpx;
}
.logo{
    width: 160rpx;
    height: 160rpx;
}
.title{
    font-weight: 500;
    color: #000;
    font-size: 44rpx;
    margin: 50rpx 32rpx;
}
.desc{
    font-size: 28rpx;
    font-weight: 400;
    color: rgb(171, 193, 212);
    margin: 32rpx;
}
.text{
    margin: 32rpx;
    color: #333;
    overflow-wrap: break-word;
    line-height: 1.7;
}
.hr{
    margin: 32rpx;
    border-top: 1px solid #999;
}
.link{
    color: #5da1b4;
    text-decoration: none;
    border-bottom: 1px dashed;
}
.red{
    color: #751f1f;
}
.b{
    font-weight: bold;
}
.choose{
    margin: 80rpx auto;
}
.join{
    width: 400rpx;
    height: 100rpx;
    background-color: aquamarine;
}